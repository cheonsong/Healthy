default_platform(:ios)

platform :ios do
  desc "AppVersionì˜¬ë¦¬ê¸°"
lane :set_version do |options|
  case options[:version]
  when "major", "minor", "patch"
    increment_version_number(bump_type: options[:version],
			     xcodeproj: "./Healthy/Healthy/Healthy.xcodeproj")
  else
    increment_version_number(version_number: options[:version],
			     xcodeproj: "./Healthy/Healthy/Healthy.xcodeproj")
  end
  
  # ê°€ì¥ í”í•œ ë¹Œë“œë²ˆí˜¸ ê·œì¹™ì€, íŠ¹ì • ë²„ì „ë²ˆí˜¸ì— í•´ë‹¹í•˜ëŠ” në²ˆì§¸ ë¹Œë“œì˜ ë¹Œë“œë²ˆí˜¸ëŠ” nì´ì–´ì•¼ í•œë‹¤ëŠ” ê²ƒì´ë‹¤. 
  # í•˜ì§€ë§Œ ìë™í™” ê³¼ì •ì—ì„œëŠ” ì´ ê·œì¹™ì„ ì ìš© í•  ìˆ˜ ì—†ìœ¼ë¯€ë¡œ, í˜„ì¬ì‹œê°„ì„ ì¡°í•©í•˜ì—¬ ì¤‘ë³µë  ì¼ ì—†ëŠ” ë¹Œë“œë²ˆí˜¸ë¥¼ ë§Œë“ ë‹¤.
  increment_build_number(
    build_number: Time.new.strftime("%Y.%m%d.%H%M"), # 2021ë…„ 4ì›” 17ì¼ 14ì‹œ 53ë¶„ -> 2021.0417.1453
    xcodeproj: "./Healthy/Healthy/Healthy.xcodeproj" 
    )
  version_number = "#{lane_context[SharedValues::VERSION_NUMBER]}(#{lane_context[SharedValues::BUILD_NUMBER]})"
  commit_version_bump(
    message: "Update version - #{version_number}",
    xcodeproj: "./Healthy/Healthy/Healthy.xcodeproj"
    )
  add_git_tag(tag: "v#{version_number}")
  push_to_git_remote
end


lane :release do
  # 5. keychain ì´ˆê¸°í™” ğŸ”‘
  create_keychain(
    name: ENV["KEYCHAIN_NAME"],
    password: ENV["KEYCHAIN_PASSWORD"],
    timeout: 1800,
    default_keychain: true,
    unlock: true,
    lock_when_sleeps: false
  )

  app_store_connect_api_key(
    key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
    issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
    key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]
    )

  # 6. matchë¥¼ ì‹¤í–‰í•˜ì—¬ ì¸ì¦ì„œ ë° í”„ë¡œíŒŒì¼ ë¶ˆëŸ¬ì˜¤ê¸° âœğŸ¼
  match(
    git_url: "git@github.com:cheonsong/Healthy.git",
    storage_mode: "git",
    type: "appstore",
    readonly: true,
    keychain_name: ENV["KEYCHAIN_NAME"],
    keychain_password: ENV["KEYCHAIN_PASSWORD"]
    )

  # 7. ë¹Œë“œ ë° ë‚´ë³´ë‚´ê¸° ğŸ—
  gym(
    workspace: "Healthy.xcworkspace",
    scheme: "Healthy",
    configuration: "Release",
    export_options: {
      method: "app-store",
      signingStyle: "manual"
    }
    )

  # 8. ì•±ìŠ¤í† ì–´ ì—…ë¡œë“œ ğŸ‰
  deliver(
    submit_for_review: false,
    force: true,
    skip_screenshots: true,
    automatic_release: true,
    precheck_include_in_app_purchases: false,
    copyright: "Â© #{Time.now.year} cheonsong, Inc.",
    submission_information: {    
      export_compliance_encryption_updated: false,
      export_compliance_uses_encryption: false,
      add_id_info_uses_idfa: false
      }
    )
end

